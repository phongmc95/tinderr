<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <link href="css/style.css" rel="stylesheet" />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,300;0,400;1,500&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css"
      rel="stylesheet"
    />
    <title>Tinder</title>
    <link href="./css/demo.css" rel="stylesheet" />
  </head>

  <body>
    <div class="container">
      <div class="side">
        <div class="header">
          <div class="avatar">
            <img
              src="https://scontent.fhan2-1.fna.fbcdn.net/v/t1.0-9/122067366_1572039919847053_4237969387623082442_o.jpg?_nc_cat=101&ccb=1-3&_nc_sid=09cbfe&_nc_ohc=kTqpDXUNGkcAX8d8AUO&_nc_ht=scontent.fhan2-1.fna&oh=e6cda1187d8b32a7f5dfd620b517f51a&oe=607C4B06"
             alt=""/>
          </div>
          <div class="title">
            <a href="./profile" style="text-decoration: none; color: white"
              >My Profile</a>
              <a href="./add"><i class="fas fa-plus"
                                  style="font-size: 20px; color: white; text-decoration: none; margin-left: 80px;"></i></a>
          </div>
        </div>
        <div class="menu" style="padding: 10px">
          <ul>
            <li>Matches</li>
            <li class="active">Messenger</li>
          </ul>
        </div>
        <div class="messages">
          <div class="avatar">
            <img
              alt=""
              src="./images/1.jpg"
            />
          </div>
          <div class="message">
            <div class="user">Trang Mun</div>
            <div class="text">New Match!!!</div>
          </div>
        </div>
        <div class="messages">
          <div class="avatar">
            <img
              alt=""
              src="./images/2.jpg"
            />
          </div>
          <div class="message">
            <div class="user">Linh Rùa</div>
            <div class="text">New Match!!!</div>
          </div>
        </div>
        <div class="messages">
          <div class="avatar">
            <img
              alt=""
              src="./images/3.webp"
            />
          </div>
          <div class="message">
            <div class="user">Phạm Quyên</div>
            <div class="text">New Match!!!</div>
          </div>
        </div>
        <div class="messages">
          <div class="avatar">
            <img
              alt=""
              src="./images/4.jpeg"
            />
          </div>
          <div class="message">
            <div class="user">Huyền Linh</div>
            <div class="text">New Match!!!</div>
          </div>
        </div>
        <div class="messages">
          <div class="avatar">
            <img
              alt=""
              src="./images/5.jpg"
            />
          </div>
          <div class="message">
            <div class="user">Thắm</div>
            <div class="text">New Match!!!</div>
          </div>
        </div>
      </div>
      <div class="content">
        <div class="card">
          <div class="user">
            <div class="slideshow-container">
              <div class="mySlides fade">
                <img alt=""
                  src="./images/6.jpg"
                  style="width: 380px; height: 500px"/>
                <div class="profile">
                  <div class="name">Thu Trang <span>25</span></div>
                  <div class="local">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>3 kilometers away</span>
                  </div>
                </div>
              </div>

              <div class="mySlides fade">
                <img
                        alt=""
                  src="./images/7.jpeg"
                  style="width: 380px; height: 500px"
                />
                <div class="profile">
                  <div class="name">Thanh Thanh <span>20</span></div>
                  <div class="local">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>5 kilometers away</span>
                  </div>
                </div>
              </div>

              <div class="mySlides fade">
                <img
                        alt=""
                  src="./images/8.jpg"
                  style="width: 380px; height: 500px"
                />
                <div class="profile">
                  <div class="name">Nhật Linh <span>20</span></div>
                  <div class="local">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>5 kilometers away</span>
                  </div>
                </div>
              </div>

              <div class="mySlides fade">
                <img
                        alt=""
                  src="./images/9.jpg"
                  style="width: 380px; height: 500px"
                />
                <div class="profile">
                  <div class="name">Hoài Phương <span>19</span></div>
                  <div class="local">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>5 kilometers away</span>
                  </div>
                </div>
              </div>

              <div class="mySlides fade">
                <img
                        alt=""
                  src="./images/10.jpg"
                  style="width: 380px; height: 500px"
                />
                <div class="profile">
                  <div class="name">Linh Nhi <span>25</span></div>
                  <div class="local">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>5 kilometers away</span>
                  </div>
                </div>
              </div>

              <div class="mySlides fade">
                <img
                        alt=""
                  src="./images/11.jpg"
                  style="width: 380px; height: 500px"
                />
                <div class="profile">
                  <div class="name">Đặng Thị Thảo <span>23</span></div>
                  <div class="local">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>5 kilometers away</span>
                  </div>
                </div>
              </div>

              <div class="mySlides fade">
                <img
                        alt=""
                  src="./images/12.jpg"
                  style="width: 380px; height: 500px"
                />
                <div class="profile">
                  <div class="name">Thu Hiền <span>18</span></div>
                  <div class="local">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>2 kilometers away</span>
                  </div>
                </div>
              </div>

              <a class="prev" onclick="plusSlides(-1)">❮</a>
              <a class="next" onclick="plusSlides(1)">❯</a>
            </div>
          </div>
        </div>
        <div class="buttons">
          <div class="no" id="no">
            <i class="fas fa-times" onclick="plusSlides(-1)"></i>
          </div>
          <div class="star" id="star">
            <i class="fas fa-star fa"></i>
          </div>
          <div class="heart" id="heart">
            <i class="fas fa-heart" onclick="plusSlides(1)"></i>
          </div>
        </div>
      </div>
    </div>
    <script src="./js/demo.js"></script>
  </body>
</html>
